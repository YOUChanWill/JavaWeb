<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>servlet.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>servlet.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddNote</servlet-name>
        <servlet-class>servlet.AddNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNote</servlet-name>
        <url-pattern>/AddNote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteNote</servlet-name>
        <servlet-class>servlet.DeleteNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteNote</servlet-name>
        <url-pattern>/DeleteNote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteNote</servlet-name>
        <servlet-class>servlet.Admin_DeleteNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteNote</servlet-name>
        <url-pattern>/AdminDeleteNote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Exit</servlet-name>
        <servlet-class>servlet.Exit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Exit</servlet-name>
        <url-pattern>/Exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintUser</servlet-name>
        <servlet-class>servlet.PrintUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintUser</servlet-name>
        <url-pattern>/printuser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintAllNote</servlet-name>
        <servlet-class>servlet.PrintAllNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintAllNote</servlet-name>
        <url-pattern>/printallnote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintUserNote</servlet-name>
        <servlet-class>servlet.PrintUserNote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintUserNote</servlet-name>
        <url-pattern>/printusernote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateRoot</servlet-name>
        <servlet-class>servlet.NoteRoot</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateRoot</servlet-name>
        <url-pattern>/UpdateRoot</url-pattern>
    </servlet-mapping>


</web-app>